<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.weeklymix" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/weekly_mix_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/weekly_mix_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.WeeklyMix" >
        <activity
            android:name=".ShuffleActivity"
            android:exported="false"
            android:label="@string/title_activity_shuffle"
            android:theme="@style/Theme.WeeklyMix.NoActionBar" />
        <activity
            android:name=".CalendarActivity"
            android:exported="false" />
        <activity
            android:name=".SetUpActivity"
            android:exported="false"
            android:label="@string/title_activity_set_up"
            android:theme="@style/Theme.WeeklyMix.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.WeeklyMix.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>